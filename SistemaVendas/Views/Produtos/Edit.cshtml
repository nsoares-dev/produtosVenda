@model SistemaVendas.Models.Produto

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProdutoId" />
            <div class="form-group">
                <label asp-for="TituloProduto" class="control-label"></label>
                <input asp-for="TituloProduto" class="form-control" />
                <span asp-validation-for="TituloProduto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescricaoProduto" class="control-label"></label>
                <input asp-for="DescricaoProduto" class="form-control" />
                <span asp-validation-for="DescricaoProduto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AvaliacaoProduto" class="control-label"></label>
                <input asp-for="AvaliacaoProduto" class="form-control" />
                <span asp-validation-for="AvaliacaoProduto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecoProduto" class="control-label"></label>
                <input asp-for="PrecoProduto" class="form-control" />
                <span asp-validation-for="PrecoProduto" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="statusEntrega" /> @Html.DisplayNameFor(model => model.statusEntrega)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ExibirAnuncio" /> @Html.DisplayNameFor(model => model.ExibirAnuncio)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="UrlImagem" class="control-label"></label>
                <input asp-for="UrlImagem" class="form-control" />
                <span asp-validation-for="UrlImagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
